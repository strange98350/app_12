<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".blockchainactivity">


    <TextView
        android:id="@+id/textblock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="BlockChain Development"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="442dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        tools:context=".blockchainactivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image5"
            android:layout_width="147dp"
            android:layout_height="187dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:src="@drawable/solidity" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image6"
            android:layout_width="147dp"
            android:layout_height="187dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:src="@drawable/go" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image7"
            android:layout_width="147dp"
            android:layout_height="187dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:src="@drawable/cpp" />
    </GridLayout>
</LinearLayout>