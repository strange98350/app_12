<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".cloudActivity">


    <TextView
        android:id="@+id/textcloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Cloud Computing"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        tools:context=".cloudActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image8"
            android:layout_width="147dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:src="@drawable/azure" />

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image9"
        android:layout_width="147dp"
        android:layout_height="150dp"
        android:src="@drawable/gcp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="15dp"  />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image10"
        android:layout_width="147dp"
        android:layout_height="150dp"
        android:src="@drawable/aws"
        app:civ_border_color="#FF000000"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="15dp"
        />
    </GridLayout>
</LinearLayout>