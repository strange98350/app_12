<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".WebActivity">

    <TextView
        android:id="@+id/textwebdev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Web Development"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Scrollable content area">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        tools:context=".WebActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image17"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/html"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image18"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/csss"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image19"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/javascript"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image20"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/angular"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image21"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/rrr"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="15dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image22"
        android:layout_width="150dp"
        android:layout_height="157dp"
        android:src="@drawable/mongodb"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="15dp"/>
    </GridLayout>
    </ScrollView>
</LinearLayout>